{
  "name": "zoltraak",
  "version": "0.1.0",
  "private": true,
  "description": "Zoltraak Phase 1 monorepo (Express + Next.js) for the personal finance dashboard MVP.",
  "engines": {
    "node": ">=20.11.0"
  },
  "packageManager": "pnpm@10.18.3",
  "workspaces": [
    "apps/backend",
    "apps/frontend",
    "packages/types",
    "packages/utils"
  ],
  "scripts": {
    "dev": "concurrently \"pnpm --filter @zoltraak/backend dev\" \"pnpm --filter @zoltraak/frontend dev\"",
    "build": "pnpm -r --if-present build",
    "lint": "pnpm -r --if-present lint",
    "format": "pnpm -r --if-present format",
    "test": "pnpm -r --if-present test"
  },
  "devDependencies": {
    "concurrently": "^8.2.2",
    "typescript": "^5.6.3"
  },
  "dependencies": {
    "react-icons": "^5.5.0"
  }
}
