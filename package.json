{
  "name": "zoltraak",
  "version": "0.1.0",
  "private": true,
  "description": "Zoltraak Phase 1 monorepo (Express + Next.js) for the personal finance dashboard MVP.",
  "engines": {
    "node": ">=20.11.0"
  },
  "workspaces": [
    "apps/backend",
    "apps/frontend",
    "packages/types",
    "packages/utils"
  ],
  "scripts": {
    "dev": "concurrently \"npm run dev --workspace apps/backend\" \"npm run dev --workspace apps/frontend\"",
    "build": "npm run build --workspaces --if-present",
    "lint": "npm run lint --workspaces --if-present",
    "format": "npm run format --workspaces --if-present",
    "test": "npm run test --workspaces --if-present"
  },
  "devDependencies": {
    "concurrently": "^8.2.2",
    "typescript": "^5.6.3"
  },
  "dependencies": {
    "react-icons": "^5.5.0"
  }
}
