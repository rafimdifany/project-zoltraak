generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id           String        @id @default(uuid())
  email        String        @unique
  passwordHash String?
  displayName  String?
  role         UserRole      @default(USER)
  currency     CurrencyCode?
  createdAt    DateTime      @default(now())
  updatedAt    DateTime      @updatedAt

  transactions Transaction[]
  budgets      Budget[]
  assets       Asset[]
  assetGroups  AssetGroup[]
}

model Transaction {
  id          String            @id @default(uuid())
  user        User              @relation(fields: [userId], references: [id])
  userId      String
  type        TransactionType
  currency    CurrencyCode?
  category    String
  amount      Decimal           @db.Decimal(18, 2)
  occurredAt  DateTime
  description String?
  budget      Budget?           @relation(fields: [budgetId], references: [id])
  budgetId    String?
  createdAt   DateTime          @default(now())
  updatedAt   DateTime          @updatedAt
}

model Budget {
  id             String        @id @default(uuid())
  user           User          @relation(fields: [userId], references: [id])
  userId         String
  name           String
  targetAmount   Decimal       @db.Decimal(18, 2)
  periodStart    DateTime
  periodEnd      DateTime
  createdAt      DateTime      @default(now())
  updatedAt      DateTime      @updatedAt

  transactions   Transaction[]
}

model Asset {
  id           String      @id @default(uuid())
  user         User        @relation(fields: [userId], references: [id])
  userId       String
  group        AssetGroup  @relation(fields: [groupId], references: [id])
  groupId      String
  name         String
  currentValue Decimal     @db.Decimal(18, 2)
  createdAt    DateTime    @default(now())
  updatedAt    DateTime    @updatedAt
}

model AssetGroup {
  id        String  @id @default(uuid())
  user      User    @relation(fields: [userId], references: [id])
  userId    String
  name      String
  isDefault Boolean @default(false)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  assets Asset[]

  @@unique([userId, name])
}

enum UserRole {
  USER
  PREMIUM
  ADMIN
}

enum TransactionType {
  INCOME
  EXPENSE
}

enum CurrencyCode {
  USD
  SGD
  INR
  JPY
  RUB
  GBP
  EUR
  CNY
  IDR
  MYR
  AUD
  BRL
  SAR
  AED
}
